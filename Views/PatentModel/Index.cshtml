@model IEnumerable<FollowPeers.Models.PatentModel>
@{
    ViewBag.Title = "Patent Db";
}

@Html.Partial("_Header")
@Html.Partial("_SideBar1")

<div class="grid_10">
    <div class="box">
        <h2>Patent Database</h2>
        @Script("jquery.validate.min.js")
        @Script("jquery.validate.unobtrusive.min.js")
        @Script("jquery.bgiframe.js")
        @Script("jquery.mcdropdown.js")
        @Script("jquery-1.7.1.min.js")
        @Script("jquery.dataTables.min")
        @Script("index.js")
        <link rel="stylesheet" type="text/css" href="../../Content/css/jquery.mcdropdown.css" />
        <link href="../../Content/css/jquery-ui.css" rel="stylesheet" type="text/css" />
        <link href="../../Content/css/table.css" rel="stylesheet" type="text/css" />
       <br />
        @{
            if (Model.Count() == 0)
            {
                 <legend>You haven't added patents to your profile</legend>
            <br />
            }
            else
            {
            <table id="myDataTable" class="display">
                <thead>
                    <tr>
                        <th>
                            Title
                        </th>
                        <th>
                            Patent Number
                        </th>
                        <th>
                            Country
                        </th>
                        <th>
                            Approval Year
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RefNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Country)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AproveYear)
                            </td>
                            <td>
                                @Html.ActionLink("More..", "Details", new { id = item.ID })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            } 
        }
        <br />
    </div>
</div>
<div class="grid_3">
    <div class="box">
        <h2>
        </h2>
        @*@{Html.RenderAction("ProgressTracker", "Profile");}*@
    </div>
</div>
@Html.Partial("_Footer")
@helper Script(string scriptName)
    {
    <script src="@Url.Content("~/Scripts/" + scriptName)" type="text/javascript"></script>
}
