                    <li>@Html.ActionLink("Update Profile", "Edit", "Profile")</li>
                    <li>@Html.ActionLink("Privacy", "Privacy", "Profile")</li>
                    <li>@Html.ActionLink("Log Off", "LogOff", "Account")</li>
                </ul>
            </li>
